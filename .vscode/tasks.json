{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build project",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        // "-Wfatal-errors",
        "-fmax-errors=1",
        "-g",
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/source/Entity/*.cpp",
        "${workspaceFolder}/source/Hub/*.cpp",
        "-I",
        "${workspaceFolder}/header",
        "-o",
        "${workspaceFolder}/game.exe", // Output executable in the root folder
        "-lsfml-graphics",
        "-lsfml-audio",
        "-lsfml-window",
        "-lsfml-system"
        // "-mwindows" // needed to not show up console window
      ],
      "options": {
        "cwd": "C:/msys64/ucrt64/bin"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Builds the entire 'Game' project."
    }
  ],
  "version": "2.0.0"
}